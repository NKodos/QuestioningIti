                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid x:Name="Menu_2" Height="auto" Grid.Row="0" Background="WhiteSmoke">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10 0" Grid.Row="0">
                                <Button Uid="0" Width="150" Height="30" Content="Вопросы" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#0067a2" Click="Button_Click_2_Questioning" />
                                <Button Uid="1" Width="150" Height="30" Content="Редактор анкет" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#0067a2" Click="Button_Click_2_Questioning" />
                                <Button Uid="2" Width="150" Height="30" Content="Ответы" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#0067a2" Click="Button_Click_2_Questioning" />
                                <Button Uid="3" Width="150" Height="30" Content="Вычисления" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#0067a2" Click="Button_Click_2_Questioning" />
                            </StackPanel>
                            <Grid x:Name="GridCursor_2" Width="150" Height="2" Background="#BDBDBD" HorizontalAlignment="Left" Margin="10 0 0 0" Grid.Row="1"/>
                        </Grid>
                        <TabControl x:Name="tabControl_2" Background="#FFA0BAAD" Grid.Row="1">
                            <!-- Анкеты > Вопросы -->
                            <TabItem Header="Просмотр" Height="0">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="100, 0" Background="White">
                                        <Button x:Name="btnCreateQuestionBlock" Content="Создать блок вопросов" HorizontalAlignment="Right" Margin="20, 20, 30, 10" Padding="10, 5" Background="#0067a2" Foreground="White" FontWeight="Light" BorderThickness="0" Click="btnCreateQuestionBlock_Click"></Button>
