                                        </WrapPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>
                            <!-- Анкеты > Ответы -->
                            <TabItem Header="Отеты" Height="0">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="100, 0" Background="White">
                                        <Label Margin="10, 20, 10, 0" Foreground="#303030">Выберите направление</Label>
                                        <ComboBox Name="cbDirInAnswers" Width="200px" HorizontalAlignment="Left" Margin="20px, 0" Background ="WhiteSmoke" SelectionChanged="cbDirInAnswers_SelectionChanged">
                                            <ComboBoxItem Content="Направление 1"></ComboBoxItem>
                                            <ComboBoxItem Content="Направление 2"></ComboBoxItem>
                                            <ComboBoxItem Content="Направление 3"></ComboBoxItem>
                                            <ComboBoxItem Content="Направление 4"></ComboBoxItem>
                                            <ComboBoxItem Content="Направление 5"></ComboBoxItem>
